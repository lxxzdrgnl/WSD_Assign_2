# Application Settings
APP_NAME=Bookstore API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8080

# Database Configuration
# These variables are used by the FastAPI application (in config.py)
# and by the MySQL container in docker-compose.yml
DB_HOST=db # Use the service name from docker-compose.yml
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=bookstore_db
DB_ROOT_PASSWORD=your_strong_root_password # For MySQL container initialization

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Pagination Defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Bcrypt Settings
BCRYPT_ROUNDS=12
